<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_lista_rooms"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    android:paddingHorizontal="10dp"
    android:clickable="true"
    android:layout_marginVertical="0.5dp">

    <ImageView
        android:id="@+id/imageview_profile_rooms"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginRight="16dp"/>

    <LinearLayout
        android:layout_toEndOf="@id/imageview_profile_rooms"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        tools:ignore="RtlCompat">

        <TextView
            android:id="@+id/textview_name_rooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="70dp"
            android:fontFamily="@font/roboto"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textview_message_rooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:singleLine="true"
            android:textSize="14dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/time_profile_rooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textSize="10dp"
        android:fontFamily="@font/roboto"
        android:layout_margin="5dp"/>

</RelativeLayout>