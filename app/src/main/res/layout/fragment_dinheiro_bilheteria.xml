<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/name_pagar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:paddingTop="5dp"
                android:paddingHorizontal="10dp"/>

            <TextView
                android:id="@+id/evento_pagar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/validade_pagar"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="12dp"
                android:paddingHorizontal="10dp"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/preco_pagar"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="16dp"
                android:textStyle="bold"
                android:paddingHorizontal="10dp"
                android:layout_marginVertical="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:weightSum="2"
            android:layout_marginBottom="10dp">


            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:text="Valor recebido"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/edittext_valor_recebido_pagar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_white"
                    android:padding="10dp"
                    android:inputType="number"
                    android:textSize="20dp"
                    android:hint="0.00"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:text="Troco"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/edittext_troco_pagar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_white"
                    android:padding="10dp"
                    android:hint="0.00"
                    android:editable="false"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Receba o pagamento em dinheiro"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="16dp"
            android:gravity="center"
            android:textSize="18dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_money_revenda"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/button_pagar_dinheiro"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_login"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="24dp"
            android:text="Receber"
            android:textColor="@color/white"
            android:textSize="16dp"/>

    </LinearLayout>

</ScrollView>

