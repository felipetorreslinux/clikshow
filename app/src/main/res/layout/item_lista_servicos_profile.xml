<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/box_item_servico_profile"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_gravity="center"
    android:padding="5dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginBottom="2dp"
    android:divider="@color/graybold"
    android:showDividers="end">

    <ImageView
        android:id="@+id/img_evento_servico_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:id="@+id/tipo_servico_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:capitalize="words"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/name_evento_servico_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:capitalize="words"
            android:textColor="@color/graybold"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/data_servico_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="12dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/open_servicos_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir"
        android:layout_gravity="center"
        android:background="@null"
        android:textColor="@color/colorAccent"/>

</LinearLayout>