<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cortesia"
        android:textAllCaps="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="CPF"
            android:layout_marginVertical="10dp"/>

        <EditText
            android:id="@+id/cpf_pagamento_bilheteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/input"
            android:textSize="18dp"
            android:maxLength="11"
            android:inputType="number"
            android:hint="Somente nÃºmeros"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="Telefone"
            android:layout_marginVertical="10dp"/>

        <EditText
            android:id="@+id/telefone_pagamento_bilheteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/input"
            android:textSize="18dp"
            android:maxLength="11"
            android:inputType="number"
            android:hint="99 99999-9999"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_finalizar_pagamento_cortesia_bilheteria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:background="@drawable/btn_login"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="VALIDAR CHECK-IN"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginVertical="15dp"/>

    <TextView
        android:id="@+id/trocar_forma_pagamento_bilheteria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_marginVertical="10dp"
        android:textColor="@color/colorAccent"
        android:text="Voltar"/>

</LinearLayout>