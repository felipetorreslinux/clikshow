<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_background"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageview_profile_valida_portaria"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:layout_marginVertical="16dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="5dp"
            android:layout_marginHorizontal="16dp">

            <TextView
                android:id="@+id/textview_name_valida_portaria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"/>

            <TextView
                android:id="@+id/textview_ingresso_valida_portaria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:fontFamily="@font/roboto"/>

            <TextView
                android:id="@+id/textview_status_valida_portaria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:fontFamily="@font/roboto"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/button_valida_portaria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="validar acesso"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="16dp"/>

</LinearLayout>