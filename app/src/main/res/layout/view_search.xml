<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/fundo"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="1dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/back_search"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="13dp"
            android:src="@drawable/ic_back_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_gravity="center"
            android:textSize="19dp"
            android:text="Buscar eventos"
            android:inputType="textAutoComplete"
            android:imeOptions="actionSearch"
            android:paddingHorizontal="10dp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/box_searh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_white"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:padding="10dp"
            android:weightSum="1">

            <EditText
                android:id="@+id/text_search"
                android:layout_weight="0.8"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:inputType="textAutoComplete"
                android:layout_marginRight="10dp"
                android:hint="Pesquise por eventos, cidades..."
                android:background="@null"/>

            <ImageView
                android:id="@+id/icon_mic_search"
                android:layout_weight="0.2"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mic_gray"/>
        </LinearLayout>


        <Button
            android:id="@+id/btn_buscar_evento"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/btn_login"
            android:textColor="@color/white"
            android:text="Procurar"/>
    </RelativeLayout>

</LinearLayout>