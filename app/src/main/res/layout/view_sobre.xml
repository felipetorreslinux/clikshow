<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/gray_background"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:columnCount="3"
        android:rowCount="1"
        android:elevation="1dp">

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_row="0">

            <ImageView
                android:id="@+id/back_sobre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="12dp"
                android:src="@drawable/ic_back_black" />
        </FrameLayout>


        <ImageView
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginTop="2dp"
            android:layout_gravity="fill_horizontal|center"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_logo_orange" />


        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="2"
            android:layout_row="0">
        </FrameLayout>
    </GridLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_ajuda"
        android:layout_marginVertical="16dp"/>

    <LinearLayout
        android:id="@+id/btn_open_termos_condicoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:paddingHorizontal="16dp"
        android:layout_marginVertical="0.5dp"
        android:background="@color/white"
        android:weightSum="1">
        <TextView
            android:layout_weight="0.9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="fill_vertical"
            android:text="Termos e condições"
            android:textColor="@color/black"
            android:textSize="16dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/ic_arrow_right"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_open_politica_privacidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:paddingHorizontal="16dp"
        android:layout_marginVertical="0.5dp"
        android:background="@color/white"
        android:weightSum="1">
        <TextView
            android:layout_weight="0.9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="fill_vertical"
            android:text="Politica de privacidade"
            android:textColor="@color/black"
            android:textSize="16dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/ic_arrow_right"/>
    </LinearLayout>


</LinearLayout>