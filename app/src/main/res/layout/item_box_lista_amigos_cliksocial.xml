<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.santalu.aspectratioimageview.AspectRatioImageView
        android:id="@+id/imagem_user_clik_social"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:ari_aspect="height"
        app:ari_ratio="1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/name_user_clik_social"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="16dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/username_user_clik_social"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:singleLine="true"
            android:textColor="@color/graybold"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:weightSum="2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/ic_heart"/>

        <ImageView
            android:id="@+id/direct_amigo_clik_social"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/ic_mail_black"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/box_send_direct_amigo_clik_social"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/info_para_amigo_cli_social"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>

        <LinearLayout
            android:paddingVertical="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:weightSum="1">

            <EditText
                android:id="@+id/texto_direct_amigo_clik_social"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:background="@null"
                android:padding="10dp"
                android:inputType="textAutoComplete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:hint="Escreva aqui..."/>

            <ImageView
                android:id="@+id/btn_enviar_direct_amigo_clik_social"
                android:layout_gravity="center"
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@drawable/ic_send_black"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>