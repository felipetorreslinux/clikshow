<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/item_ingresso_bilheteria"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/myticket_background"
    android:orientation="horizontal"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="10dp">
        <ImageView
            android:id="@+id/imageview_image_ingressgo_bilheteria"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginRight="45dp"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="35dp"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/validade_ingresso_bilheteria"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:textColor="@color/graybold"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/name_ingresso_bilheteria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:layout_marginVertical="5dp"/>

                        <TextView
                            android:id="@+id/evento_ingresso_bilheteria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp" />

                </LinearLayout>
        </RelativeLayout>

</LinearLayout>
