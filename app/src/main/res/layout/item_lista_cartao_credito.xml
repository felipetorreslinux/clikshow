<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_cartao_credito"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:background="@color/white"
    android:layout_marginVertical="1dp"
    android:paddingVertical="16dp">

    <LinearLayout
        android:id="@+id/box_img_lista_cartao"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:gravity="fill_vertical"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_lista_cartao_credito"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/box_img_lista_cartao">

        <TextView
            android:id="@+id/number_lista_cartao_credito"
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/remove_lista_cartao_credito"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_remove_cartao"/>

</RelativeLayout>