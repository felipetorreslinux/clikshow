<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_background"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:columnCount="3"
        android:background="@color/white"
        android:rowCount="1">

        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_column="0"
            android:layout_row="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal|center"
            android:layout_column="1"
            android:layout_row="0"
            android:text="Perfil"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="18dp"/>

        <FrameLayout
            android:id="@+id/btn_settings_profile"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_column="2"
            android:layout_row="0">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_menu_boll_black"
                android:padding="12dp"/>
        </FrameLayout>
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="52dp">

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/colorAccent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sua compra está aguardando pagamento"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/openEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="1dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="70dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textAllCaps="true"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"/>

                <TextView
                    android:id="@+id/cellphone_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textAllCaps="false"
                    android:singleLine="true"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/email_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textAllCaps="false"
                    android:singleLine="true"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/img_qrcode_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="10dp"
            android:textSize="14dp"
            android:textAllCaps="true"
            android:text="configurações" />

        <LinearLayout
            android:id="@+id/btn_open_editar_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:paddingHorizontal="16dp"
            android:layout_marginVertical="0.5dp"
            android:background="@color/white"
            android:weightSum="1">
            <TextView
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="fill_vertical"
                android:text="Editar perfil"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:src="@drawable/ic_arrow_right"
                android:tint="@color/ef_grey"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_open_payment_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:paddingHorizontal="16dp"
            android:layout_marginVertical="0.5dp"
            android:background="@color/white"
            android:weightSum="1">
            <TextView
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="fill_vertical"
                android:text="Pagamento"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:src="@drawable/ic_arrow_right"
                android:tint="@color/ef_grey"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_open_servicos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:paddingHorizontal="16dp"
            android:layout_marginVertical="0.5dp"
            android:background="@color/white"
            android:weightSum="1">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="fill_vertical"
                android:text="Serviços"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:src="@drawable/ic_arrow_right"
                android:tint="@color/ef_grey"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_open_ajuda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:paddingHorizontal="16dp"
            android:layout_marginVertical="0.5dp"
            android:background="@color/white"
            android:weightSum="1">
            <TextView
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="fill_vertical"
                android:text="Ajuda"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:src="@drawable/ic_arrow_right"
                android:tint="@color/ef_grey"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_open_sobre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:paddingHorizontal="16dp"
            android:layout_marginVertical="0.5dp"
            android:background="@color/white"
            android:weightSum="1">

            <TextView
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="fill_vertical"
                android:text="Sobre"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:src="@drawable/ic_arrow_right"
                android:tint="@color/ef_grey"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="Versão: 1.0.4"/>

</RelativeLayout>