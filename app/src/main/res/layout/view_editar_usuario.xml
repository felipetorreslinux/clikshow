<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:columnCount="3"
        android:background="@color/white"
        android:rowCount="1">

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_row="0">

            <ImageView
                android:id="@+id/btn_back_editar_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_black"
                android:padding="12dp"/>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_column="1"
            android:layout_row="0"
            android:text="Editar Perfil"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="18dp"/>

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_column="2"
            android:layout_row="0">

            <ImageView
                android:id="@+id/btn_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/ic_check"
                android:padding="12dp"/>
        </FrameLayout>

    </GridLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginVertical="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_edit_profile"
                    android:layout_gravity="center"
                    android:layout_width="180dp"
                    android:layout_height="180dp"/>

                <FrameLayout
                    android:id="@+id/btn_editar_profile_pic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/fab"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="130dp"
                    android:gravity="center"
                    android:elevation="4dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_img_edit_profile"
                        android:layout_gravity="center"/>


                </FrameLayout>

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:text="Nome Completo"/>

                <EditText
                    android:id="@+id/name_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:paddingLeft="10dp"
                    android:inputType="textNoSuggestions"
                    android:background="@drawable/input_white"
                    android:textSize="16dp"
                    android:layout_marginVertical="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:text="Usuário"/>

                <EditText
                    android:id="@+id/username_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:paddingLeft="10dp"
                    android:inputType="textNoSuggestions"
                    android:background="@drawable/input_white"
                    android:textSize="16dp"
                    android:layout_marginVertical="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:text="Email"/>

                <EditText
                    android:id="@+id/email_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:paddingLeft="10dp"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/input_white"
                    android:textSize="16dp"
                    android:layout_marginVertical="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:text="Gênero"/>

                <EditText
                    android:id="@+id/genre_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:paddingLeft="10dp"
                    android:inputType="textNoSuggestions"
                    android:background="@drawable/input_white"
                    android:textSize="16dp"
                    android:layout_marginVertical="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:text="Telefone"/>

                <EditText
                    android:id="@+id/cellphone_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:paddingLeft="10dp"
                    android:inputType="number"
                    android:background="@drawable/input_white"
                    android:textSize="16dp"
                    android:editable="false"
                    android:layout_marginVertical="5dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>