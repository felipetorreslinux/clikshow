<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forma de pagamento"
        android:gravity="left"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"
        android:textSize="16dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dinheiro"
            android:textAllCaps="true"
            android:gravity="left"
            android:textColor="@color/colorAccent"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/valor_apagar_dinheiro_bilheteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:text="Valor recebido"
                android:layout_marginVertical="10dp"/>

            <EditText
                android:id="@+id/valor_recebido_pagamento_bilheteria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/input"
                android:textSize="18dp"
                android:inputType="number"
                android:hint="0,00"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:text="Troco"
                android:layout_marginVertical="10dp"/>

            <TextView
                android:id="@+id/troco_pagamento_bilheteria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/input"
                android:textSize="18dp"
                android:text="R$ 0,00"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="CPF"
            android:layout_marginVertical="10dp"/>

        <EditText
            android:id="@+id/cpf_pagamento_bilheteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/input"
            android:textSize="18dp"
            android:maxLength="11"
            android:inputType="number"
            android:hint="Somente nÃºmeros"/>

        <TextView
            android:id="@+id/nome_pagamento_bilheteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:padding="10dp"
            android:background="@drawable/input"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="Telefone"
            android:layout_marginVertical="10dp"/>

        <EditText
            android:id="@+id/telefone_pagamento_bilheteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/input"
            android:textSize="18dp"
            android:maxLength="11"
            android:inputType="number"
            android:hint="99 99999-9999"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_finalizar_pagamento_dinheiro_bilheteria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:background="@drawable/btn_login"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="VALIDAR CHECK-IN"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginVertical="15dp"/>

    <TextView
        android:id="@+id/trocar_forma_pagamento_bilheteria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:textColor="@color/black"
        android:background="@color/gray"
        android:text="Trocar forma de pagamento"/>

</LinearLayout>