<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_lista_amigos_cliksocial"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingHorizontal="16dp"
    android:background="@color/white"
    android:layout_marginVertical="1dp"
    android:weightSum="2">

    <ImageView
        android:layout_weight="0.1"
        android:id="@+id/imagem_amigo_lista_cliksocial"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center|fill_vertical"/>

    <LinearLayout
        android:layout_weight="1.9"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/name_amigo_lista_cliksocial"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/username_amigo_lista_cliksocial"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="@color/graybold"
            android:layout_gravity="center"/>
    </LinearLayout>


    <Button
        android:id="@+id/btn_seguir_amigos_cliksocial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seguir"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:background="@color/white"/>

</LinearLayout>