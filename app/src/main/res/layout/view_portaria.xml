<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="NamespaceTypo"
    tools:context=".Portaria.View_Portaria">

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:itemIconTint="@color/chumbo"
        app:itemTextColor="@color/chumbo"
        app:menu="@menu/menu_portaria"
        android:layout_gravity="start">

    </android.support.design.widget.NavigationView>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/fundo_portaria"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:columnCount="3"
            android:elevation="1dp"
            android:rowCount="1">

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_row="0">

                <ImageView
                    android:id="@+id/btn_menu_portaria"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal|center"
                    android:padding="13dp"
                    android:src="@drawable/ic_menu_grid"
                    android:tint="@color/chumbo"/>

            </FrameLayout>

            <ImageView
                android:layout_column="1"
                android:layout_row="0"
                android:layout_gravity="fill_horizontal|center"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:src="@drawable/ic_logo_portaria" />


            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="2"
                android:layout_row="0">

                <ImageView
                    android:id="@+id/btn_exit_portaria"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal|center"
                    android:padding="13dp"
                    android:src="@drawable/ic_exit_app"
                    android:tint="@color/chumbo"/>

            </FrameLayout>
        </GridLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="16dp">

            <EditText
                android:id="@+id/cpf_portaria"
                android:layout_weight="0.7"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Informe o CPF"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:inputType="number"
                android:background="@drawable/input_white"
                android:layout_marginRight="60dp"/>

            <ImageView
                android:id="@+id/btn_open_qrcode_portaria"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_qrcode_img" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_fundo_portaria_leitor"/>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>

