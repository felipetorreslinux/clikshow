<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawerlayout_portaria"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="NamespaceTypo"
    tools:context=".Portaria.View_Portaria">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fundo_app"
        android:elevation="1dp">

        <RelativeLayout
            android:id="@+id/actionbar_portaria"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/btn_menu_portaria"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="13dp"
                android:src="@drawable/ic_menu_black"
                android:tint="@color/chumbo"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_logo_orange" />

            <ImageView
                android:id="@+id/btn_search_portaria"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:src="@drawable/ic_search"
                android:tint="@color/chumbo"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <FrameLayout
            android:layout_below="@id/actionbar_portaria"
            android:id="@+id/container_portaria"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_drawer_portaria"
        app:headerLayout="@layout/header_drawer_portaria"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:itemIconTint="@color/chumbo"
        app:itemTextColor="@color/chumbo"
        app:menu="@menu/menu_portaria"
        android:layout_gravity="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:clickable="true"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="11dp"
                android:text="Portaria ClikShow" />

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="11dp"
                android:text="VersÃ£o 1.0.4" />
        </LinearLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

