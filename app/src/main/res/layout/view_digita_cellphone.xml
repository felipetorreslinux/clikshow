<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:columnCount="3"
        android:elevation="2dp"
        android:background="@color/white"
        android:rowCount="1">

        <FrameLayout
            android:id="@+id/back_button_digite_phone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_row="0">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_back_black"
                android:padding="12dp"/>

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_column="1"
            android:layout_row="0"
            android:text="@string/name_title_valid_telephone"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="18dp"/>

        <FrameLayout
            android:id="@+id/btn_settings_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="2"
            android:layout_row="0">
        </FrameLayout>
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="24dp"
        android:layout_marginHorizontal="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_text_digite_phone"
            android:textStyle="bold"
            android:textSize="16dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input"
            android:layout_gravity="center"
            android:layout_marginVertical="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cellphone"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"/>


            <EditText
                android:id="@+id/input_digita_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:maxLength="11"
                android:inputType="number"
                android:hint="(00) 00000-0000"
                android:background="@android:color/transparent"/>

        </LinearLayout>


        <Button
            android:id="@+id/btn_digite_phone"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/btn_login"
            android:text="Confirmar"
            android:textColor="@color/white"
            android:textSize="16dp"/>

    </LinearLayout>

</LinearLayout>