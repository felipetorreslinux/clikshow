<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/black</item>
        <item name="android:windowActivityTransitions" tools:ignore="NewApi">true</item>
    </style>

    <style name="Splash" parent="android:Theme.DeviceDefault.Light.NoActionBar.Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@drawable/ic_fundo_splash</item>
    </style>

    <style name="EditPhotoProfile" parent="android:Theme.DeviceDefault.Light.NoActionBar.Fullscreen"/>

</resources>
